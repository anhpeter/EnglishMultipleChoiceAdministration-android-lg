<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="MainFragments.QuestionFormFragment">

     <!-- QUESTION -->
    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/fa_icon_question_circle"
        android:textColor="@color/orange"
        android:layout_marginTop="50dp"
        android:textSize="20sp"></TextView>

    <EditText
        android:id="@+id/edtQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txtQuestion"
        android:layout_toRightOf="@id/txtQuestion"
        android:layout_marginLeft="20dp"
        android:hint="Question"></EditText>

    <!-- ANSWER -->
    <TextView
        android:id="@+id/txtA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/edtQuestion"
        android:layout_marginTop="50dp"
        android:text="A."

        android:textColor="@color/blue"
        android:textSize="20sp"></TextView>

    <EditText
        android:id="@+id/edtAnswerA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@id/txtA"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/txtA"
        android:hint="Answer"></EditText>

    <TextView
        android:id="@+id/txtB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/edtAnswerA"
        android:layout_marginTop="20dp"
        android:text="B."

        android:textColor="@color/blue"
        android:textSize="20sp"></TextView>

    <EditText
        android:id="@+id/edtAnswerB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@id/txtB"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/txtB"
        android:hint="Answer"></EditText>

    <TextView
        android:id="@+id/txtC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/edtAnswerB"
        android:layout_marginTop="20dp"
        android:text="C."

        android:textColor="@color/blue"
        android:textSize="20sp"></TextView>

    <EditText
        android:id="@+id/edtAnswerC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@id/txtC"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/txtC"

        android:hint="Answer"></EditText>

    <TextView
        android:id="@+id/txtD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/edtAnswerC"
        android:layout_marginTop="20dp"
        android:text="D."

        android:textColor="@color/blue"
        android:textSize="20sp"></TextView>

    <EditText
        android:id="@+id/edtAnswerD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@id/txtD"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/txtD"

        android:hint="Answer"></EditText>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/edtAnswerD"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="50dp"
        android:text="Submit"
        android:textAllCaps="false"></Button>

</RelativeLayout>