<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/containerLayout"
    >

    <TextView
        android:id="@+id/txtThumb"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:text="P"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_text_view"
        android:layout_marginHorizontal="10dp"
        ></TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_toRightOf="@id/txtThumb"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        >

        <!-- USERNAME-->
        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="peteranh"
            android:textSize="16sp"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="1"
            ></TextView>

        <TextView
            android:id="@+id/txtEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/fa_icon_envelope"
            android:textSize="14sp"
            android:textColor="@color/blue"
            android:layout_below="@+id/txtUsername"
            android:layout_marginTop="5dp"
            ></TextView>

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="peteranh99@gmail.com"
            android:textSize="14sp"
            android:textColor="@color/blue"
            android:layout_below="@+id/txtUsername"
            android:layout_toRightOf="@+id/txtEmailLabel"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            ></TextView>

    </RelativeLayout>

</RelativeLayout>
